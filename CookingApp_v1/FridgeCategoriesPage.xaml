<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingApp_v1.FridgeCategoriesPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Priority="0" Text="Fridge" Clicked="OnFridgeListButtonClicked"/>
        <ToolbarItem  Priority="1" Text="Recipes" Clicked="OnRecipesButtonClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">
            <Label Text="Fridge Categories List"/>
            <Button Text="Fridge List" Clicked="OnFridgeListButtonClicked" />
            <!--<Button Text="Fridge List Item" Clicked="OnFridgeListItemButtonClicked" />-->

            <Button Text="Lactate" x:Name="lactate" Clicked="OnFridgeListItemButtonClicked" />
            <Button Text="Făinoase" x:Name="fainoase" Clicked="OnFridgeListItemButtonClicked" />
            <Button Text="Dulciuri" x:Name="dulciuri" Clicked="OnFridgeListItemButtonClicked" />

        </FlexLayout>
    </ContentPage.Content>
</ContentPage>