<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingApp_v1.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Register Page"/>
            <Editor Placeholder="Nume de Utilizator"
                    x:Name="nume_utilizator"
                    Text="{Binding U_nume}"
                    HeightRequest="40">
            </Editor>
            <Editor Placeholder="Email"
                    x:Name="email"
                    Text="{Binding U_email}"
                    HeightRequest="40">
            </Editor>
            <Editor Placeholder="Parolă"
                    x:Name="parola"
                    Text="{Binding U_parola}"
                    HeightRequest="40">
            </Editor>
            <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
            <Button Text="Modal Page" Clicked="OnErrorButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>