<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookingApp_v1.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login Page"/>
            <Editor Placeholder="Nume"
                    Text="{Binding U_nume}"
                    HeightRequest="40">
            </Editor>
            <Editor Placeholder="Parolă"
                    Text="{Binding U_parola}"
                    HeightRequest="40">
            </Editor>
            <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>